<p id="notice"><%= notice %></p>

<h1>Listing Stations</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Owner</th>
      <th>Boost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.location %></td>
        <td><%= station.team ? station.team.name : "Unclaimed" %></td>
        <td><%= station.boost %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Reset', reset_station_path(station),  method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>